{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  